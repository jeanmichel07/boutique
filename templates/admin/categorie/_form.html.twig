<div class="content-init">
    <div class="card card-default">
        <div class="card-header color-bg ">
            <h3 class="card-title">Ajout d'une cat√©gorie</h3>

        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <label>Categorie</label>
            {{ form_widget(form.nom,{'attr': {'class': 'form-control is-warning ' ~ (form_errors(form.nom) ? 'is-invalid')}}) }}
            <span id="{{ form.nom.vars.id }}-error" class="error invalid-feedback ml-4">{{form_errors(form.nom)}}</span>
            <div class="form-group">
                <label>Status</label>
                {{ form_widget(form.status ) }}
            </div>
        </div>
        <div class="card-footer d-flex">
            <button type="submit" class="btn btn-success ml-auto">Enregistrer</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

{#{% endblock %}#}
