{% extends 'base.html.twig' %}

{% block title %}Gallerie index{% endblock %}

{% block body %}
    <h1>Gallerie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Src</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gallerie in galleries %}
            <tr>
                <td>{{ gallerie.id }}</td>
                <td>{{ gallerie.name }}</td>
                <td>{{ gallerie.src }}</td>
                <td>{{ gallerie.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_gallerie_show', {'id': gallerie.id}) }}">show</a>
                    <a href="{{ path('app_gallerie_edit', {'id': gallerie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gallerie_new') }}">Create new</a>
{% endblock %}
